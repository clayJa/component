
.ant-dropdown-menu {
  background-color: #2EA9E6;
}

.ant-dropdown-menu-item > a, .ant-dropdown-menu-submenu-title > a {
  color: #fff;
}

.ant-dropdown-menu-item:hover, .ant-dropdown-menu-submenu-title:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.ant-dropdown-menu-item {
  color: #fff;
}

.user-info-progress.ant-dropdown-menu-item {
  cursor: default;
}

.user-info-progress.ant-dropdown-menu-item:hover {
  background-color: #2cb0e3;
}

.user-info-progress {
  .text {
    font-size: 12px;
    line-height: 12px;
    margin-top: 10px;
  }
  .ant-progress-inner {
    background-color: rgba(0, 0, 0, 0.2);
    .ant-progress-bg {
      background-color: #fff;
    }
  }
}

// ant-input-number
.ant-input-number-handler-wrap {
  z-index: 99;
}

// table
.ant-table {
  font-size: 16px;
  color: #858585;
}

.ant-table-fixed-header .ant-table-scroll .ant-table-header {
  overflow-y: hidden;
}

.ant-table-fixed-header > .ant-table-content > .ant-table-scroll > .ant-table-body {
  overflow-y: auto;
}

.ant-table-thead > tr > th {
  background-color: #fff;
  // border-bottom: none;
  color: #909699;
  font-size 14px;
  font-weight: 500;
}

.ant-table-tbody > tr:not(:last-child) > td {
  border-bottom: 1px solid #e6e6e6;
}

.ant-table-tbody > tr:nth-child(even) {
  // background-color: #f5fafe;
}

.ant-table-thead > tr > th, .ant-table-tbody > tr > td {
  padding: 12px 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align:center;
}

table {
  table-layout: fixed;
}

// pagination
.ant-table-pagination.ant-pagination {
  margin: 16px 0;
  float: none;
  text-align: center;
}

.ant-pagination-prev .ant-pagination-item-link, .ant-pagination-next .ant-pagination-item-link {
  border: none;
}

.ant-pagination-item {
  border: none;
}

.ant-pagination-options-quick-jumper input {
  height: 30px;
  width: 80px;
  border-radius: 2px;
}

// button
.ant-btn {
  height: 35px;
  border-radius: 4px;
  font-size: 14px;
  .modal-btn {
    width: 106px
  }
  &.ant-btn-sm{
    height 28px;
    border-radius 3px;
  }
}

.ant-btn-primary {
    background-color: #2EA9E6;
    border: none;
  // 添加朴素按钮的样式
  &.is-plain{
    background #EAF6FC;
    color: #2EA9E6;
    border 1px solid #B1DEF4;
  }
  // &:hover, &:focus {
  //   background-image: linear-gradient(to right, #2C8CEA 0%, #2CB7E1 100%);
  // }
}

.ant-btn-info.ant-btn-default {
  background-image: linear-gradient(to right, #0bb5d4 0%, #60dbfe 100%);
  border: none;
  color: #fff;
  &:hover, &:focus {
    color: #fff;
    background-image: linear-gradient(to right, #0bb5d4 0%, #60dbfe 100%);
  }
}

.ant-btn-danger{
  color: #F56462;
  background-color:rgba(253,239,239,1);
  border-radius:3px;
  border:1px solid rgba(251,202,202,1);
  &:hover, &:focus {
    color: #fff;
    background-image: linear-gradient(to right, #df074e 0%, #fe6060 100%);
  }
}

.ant-btn-success.ant-btn-default {
  background-image: linear-gradient(to right, #0eb052 0%, #3bd57c 100%);
  border: none;
  color: #fff;
  &:hover, &:focus {
    color: #fff;
    background-image: linear-gradient(to right, #0eb052 0%, #3bd57c 100%);
  }
}

