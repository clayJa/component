// select
.ant-select-selection--single {
  background: #fff;
  border: 1px solid #d8d8d8;
}

// input
.ant-input, .ant-input-number {
  background: #fff;
  border: 1px solid #d8d8d8;
  border-radius: 2px;
  height: 36px;
}

.ant-select-selection {
  border-radius: 2px;
  height: 36px;
}

.ant-form label {
  font-size: 16px;
}

.ant-upload.ant-upload-btn {
  .ant-btn {
    // height: 40px;
    // background: #f9f9f9;
    // border: 1px solid #f9f9f9;
  }
}

// upload
.ant-upload-list {
  display: flex;
  width: 100%;
  // border: 1px dashed #999;
  margin-top: 10px;
  flex-wrap: wrap;
  .ant-upload-list-item {
    margin-bottom: 8px;
    .ant-upload-list-item-name {
      padding-right: 10px;
    }
  }
}

// modal
.ant-modal-header {
  border-radius: 0;
  border-bottom: 1px solid rgba(56, 149, 204, 0.4);
}

.ant-modal-content {
  border-radius: 0;
  .avatar-uploader .ant-upload.ant-upload-select-picture-card > .ant-upload{
    width: 104px;
    height: 104px;
  }
}

.ant-modal-title {
  border-left: 6px solid #2EA9E6;
  padding-left: 10px;
  font-size: 18px;
  line-height: 22px;
  color: #474747;
  font-weight: normal;
}

// menu
.ant-menu-vertical .ant-menu-item:after, .ant-menu-vertical-left .ant-menu-item:after, .ant-menu-vertical-right .ant-menu-item:after, .ant-menu-inline .ant-menu-item:after {
  right: 278px;
}

// tab
.ant-tabs-nav-container {
  font-size: 16px;
}

.ant-tabs .ant-tabs-large-bar .ant-tabs-tab:hover {
  background: #2EA9E6;
  -webkit-background-clip: text;
  color: transparent;
}

.ant-tabs-nav .ant-tabs-tab-active {
  background: #2EA9E6;
  -webkit-background-clip: text;
  color: transparent;
}

.ant-tabs-ink-bar {
  background: #2EA9E6;
  // -webkit-background-clip: text;
  // color: transparent;
}

// switch
.ant-switch-checked {
  background-color: #2EA9E6;
}

// radio
.ant-radio-checked:after {
  border: 1px solid #2EA9E6;
}
.ant-radio-checked .ant-radio-inner {
  border-color: #2EA9E6;
}
.ant-radio-inner:after {
  background-color: #2EA9E6;
}


// checkbox
.ant-checkbox-checked .ant-checkbox-inner {
  background-color: #2EA9E6;
  border-color: #2EA9E6;
}

.ant-checkbox-indeterminate .ant-checkbox-inner:after {
  background-color: #2EA9E6;
}

// tooltip
.ant-tooltip-inner {
  box-shadow:0px 2px 9px 0px rgba(30,48,99,0.32);
}

// calendar
.ant-calendar-selected-date .ant-calendar-date, .ant-calendar-selected-start-date .ant-calendar-date, .ant-calendar-selected-end-date .ant-calendar-date {
  background: #2EA9E6;
  color: #fff!important;
}

.ant-calendar-today .ant-calendar-date {
    border-color: #2EA9E6;
    color: #2EA9E6;
}

a {
  color: #4BB5FF;
}

a:hover {
  color: #40a9ff;
}

a[disabled] {
  cursor: not-allowed;
  pointer-events: none;
  color: #bbb;
  opacity: 0.5
}
